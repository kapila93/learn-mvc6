@{
    ViewBag.Title = "Dashboard";
}


<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
    <!--End Page Header -->
</div>


<div class="panel panel-primary">
    <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i>Last 10 Day Sales
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                var i = 1;
                            }
                            @foreach (var sale in ViewBag.sales)
                            {
                            <tr>
                                <td>@i</td>
                                <td>@sale.Date.ToString("dd MMMM yyyy")</td>
                                <td>@sale.Total</td>
                            </tr>
                                i++;
                            }
                            
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>
<!--End simple table example -->
             