


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sample Project</title>

    <!-- Core CSS - Include with every page -->
    <link href="~/Content/plugins/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/plugins/pace/pace-theme-big-counter.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/main-style.css" rel="stylesheet" />
    <!-- Page-Level CSS -->
    <link href="~/Content/plugins/morris/morris-0.4.3.min.css" rel="stylesheet" />
</head>
<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!-- navbar top -->
        <!-- navbar side -->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <!-- sidebar-collapse -->
            <div class="sidebar-collapse">
                <!-- side-menu -->
                <ul class="nav" id="side-menu">
                    <li>
                        <!-- user image section-->
                        <div class="user-section">
                            <!--<div class="user-section-inner">
                                <img src="assets/img/user.jpg" alt="">
                            </div>
                            <div class="user-info">
                                <div>Jonny <strong>Deen</strong></div>
                                <div class="user-text-online">
                                    <span class="user-circle-online btn btn-success btn-circle "></span>&nbsp;Online
                                </div>
                            </div>-->
                        </div>
                        <!--end user image section-->
                    </li>

                    <li class="selected">
                        <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard fa-fw"></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="/Products/"><i class="fa fa-bar-chart-o fa-fw"></i> Products</a>
                    </li>
                    <li>
                        <a href="/Inventory/"><i class="fa fa-flask fa-fw"></i>Inventory</a>
                    </li>
                    <li>
                        <a href="/Sales/"><i class="fa fa-table fa-fw"></i>Sales</a>
                    </li>

                    <li class="sidebar-search">
                        <!-- search section-->
                        <div class="input-group custom-search-form">
                            <input type="text" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
