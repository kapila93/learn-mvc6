            </div>
            <!-- end sidebar-collapse -->
        </nav>
        <!-- end navbar side -->
        <!--  page-wrapper -->
        <div id="page-wrapper">
            @RenderBody()
        </div>
        <script src="~/Content/plugins/jquery-1.10.2.js"></script>
        <script src="~/Content/plugins/bootstrap/bootstrap.min.js"></script>
        <script src="~/Content/plugins/metisMenu/jquery.metisMenu.js"></script>
        <script src="~/Content/plugins/pace/pace.js"></script>
        <script src="~/Content/scripts/siminta.js"></script>
        <!-- Page-Level Plugin Scripts-->
